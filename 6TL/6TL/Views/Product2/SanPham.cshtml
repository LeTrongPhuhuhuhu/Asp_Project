@model IEnumerable<Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nội Thất | Bàn</title>
    <link href="~/css/pages/sanpham.css" rel="stylesheet" />
</head>
<body>

    <!-- Banner Section -->
    <section class="banner_sp">
        <img class="banner-image_sp" src="~/img/banner-ban-cafe.jpg" alt="Banner">
        <div class="banner-overlay_sp">
            <h1 class="banner-title_sp">Sản Phẩm</h1>
        </div>
    </section>

    <main>
        <section class="container_sp">
            <!-- Sidebar -->
            <div class="sidebar_sp">
                <h3>Danh mục</h3>
                <ul>
                    @foreach (var category in ViewBag.Categories as List<Category>)
                    {
                        <li>
                            <label>
                                <input type="checkbox" name="category" value="@category.CategoryName">
                                @category.CategoryName
                            </label>
                        </li>
                    }
                </ul>

                <h3>Chất liệu</h3>
                <ul>
                    @foreach (var material in ViewBag.Materials)
                    {
                        <li>
                            <label>
                                <input type="checkbox" name="material" value="@material">
                                @material
                            </label>
                        </li>
                    }
                </ul>

                <h3>Giá</h3>
                <div class="price-filter_sp">
                    <label for="price-range_sp">Khoảng giá:</label>
                    <input type="range" id="price-range_sp" min="0" max="10000000" step="100000" value="5000000">
                    <div class="price-values_sp">
                        <span id="min-price_sp">0 VND</span>
                        <span id="current-price_sp">5,000,000 VND</span>
                        <span id="max-price_sp">10,000,000 VND</span>
                    </div>
                </div>

                <!-- Nút Lọc Sản Phẩm -->
                <button id="filter-button" class="btn-filter">Lọc sản phẩm</button>
            </div>

            <!-- Content -->
            <div class="content_sp">
                <h2>Nội Thất / Bàn</h2>
                <div class="product-list_sp">
                    @if (Model.Any())
                    {
                        @foreach (var product in Model)
                        {
                            <div class="product-item_sp">
                                <a href="/Product/ChiTietSanPham/@product.ProductId">
                                    <div class="favorite_sp">
                                        <i class="heart-icon_sp">&hearts;</i>
                                    </div>
                                    <img src="~/img/@product.Image" alt="@product.ProductName" />
                                    <h3>@product.ProductName</h3>
                                    <span>@product.Price?.ToString("N0") VND</span>
                                    <div class="rating_sp">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (product.Rating >= i)
                                            {
                                                <span>★</span>  <!-- Sao đầy -->
                                            }
                                            else if (product.Rating >= i - 0.5)
                                            {
                                                <span>☆</span>  <!-- Sao rỗng -->
                                            }
                                            else
                                            {
                                                <span>☆</span> <!-- Sao rỗng -->
                                            }
                                        }
                                    </div>
                                </a>
                            </div>
                        }

                    }
                    else
                    {
                        <p>Không có sản phẩm nào phù hợp với tiêu chí lọc.</p>
                    }
                </div>
               
                <!-- Pagination -->
                @Html.Partial("~/Views/Shared/_Pagination.cshtml")
            </div>
        </section>
    </main>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const priceRange = document.getElementById('price-range_sp');
                const minPriceLabel = document.getElementById('min-price_sp');
                const currentPriceLabel = document.getElementById('current-price_sp');
                const maxPriceLabel = document.getElementById('max-price_sp');

                // Lắng nghe sự kiện thay đổi giá trị thanh trượt
                priceRange.addEventListener('input', () => {
                    const priceValue = priceRange.value;
                    currentPriceLabel.textContent = FormatCurrency(priceValue) + " VND";
                });

                // Đảm bảo cập nhật giá trị hiển thị ngay khi trang được tải
                const priceValue = priceRange.value;
                currentPriceLabel.textContent = FormatCurrency(priceValue) + " VND";

                // Định dạng giá trị thành VND
                function FormatCurrency(value) {
                    const number = parseInt(value, 10);
                    return number.toLocaleString(); // Định dạng thành tiền tệ VND
                }

                // Lọc sản phẩm khi nhấn nút
                const filterButton = document.getElementById('filter-button');

                filterButton.addEventListener('click', () => {
                    // Lấy danh sách các category và material đã chọn
                    const selectedCategories = Array.from(document.querySelectorAll('input[name="category"]:checked')).map(input => input.value);
                    const selectedMaterials = Array.from(document.querySelectorAll('input[name="material"]:checked')).map(input => input.value);
                    const priceRangeValue = priceRange.value;

                    // Xây dựng URL với các tham số query cho lọc
                    const url = new URL(window.location.href);
                    url.searchParams.set('categories', selectedCategories.join(','));
                    url.searchParams.set('materials', selectedMaterials.join(','));
                    url.searchParams.set('minPrice', 0); // Giá trị minPrice = 0
                    url.searchParams.set('maxPrice', priceRangeValue); // Lấy giá trị từ thanh trượt cho maxPrice

                    // Điều hướng đến URL mới để lọc
                    window.location.href = url.toString();
                });
            });
    </script>

 


</body>
</html>
