@model IEnumerable<Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nội Thất | Bàn</title>
    <link href="~/css/pages/sanpham.css" rel="stylesheet" />
</head>
<body>

    <!-- Banner Section -->
    <section class="banner_sp">
        <img class="banner-image_sp" src="~/img/banner-ban-cafe.jpg" alt="Banner">
        <div class="banner-overlay_sp">
            <h1 class="banner-title_sp">Sản Phẩm</h1>
        </div>
    </section>

    <main>
        <section class="container_sp">
            <!-- Sidebar -->
            <div class="sidebar_sp">
                <h3>Danh mục</h3>
                <ul>
                    <li><span>Danh mục 1</span></li>
                    <li><span>Danh mục 2</span></li>
                    <li><span>Danh mục 3</span></li>
                </ul>

                <h3>Chất liệu</h3>
                <ul>
                    <li><span>Gỗ</span></li>
                    <li><span>Kim loại</span></li>
                    <li><span>Kính</span></li>
                </ul>

                <h3>Giá</h3>
                <div class="price-filter_sp">
                    <label for="price-range_sp">Khoảng giá:</label>
                    <input type="range" id="price-range_sp" min="0" max="10000000" step="100000" value="5000000">
                    <div class="price-values_sp">
                        <span id="min-price_sp">0 VND</span>
                        <span id="max-price_sp">10,000,000 VND</span>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="content_sp">
                <h2>Nội Thất / Bàn</h2>
                <div class="product-list_sp">
                    @foreach (var product in Model)
                    {
                        <div class="product-item_sp" data-product-id="@product.ProductId">
                            <a  href="/Product/ChiTietSanPham/@product.ProductId">
                            <div class="favorite_sp">
                                <i class="heart-icon_sp">&hearts;</i>
                            </div>
                            <img src="~/img/@product.Image" alt="@product.ProductName" />
                            <h3>@product.ProductName</h3>
                            <span>@product.Price?.ToString("N0") VND</span>
                            <div class="rating_sp">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (product.Rating >= i)
                                    {
                                        <span>★</span>  <!-- Sao đầy -->
                                    }
                                    else if (product.Rating >= i - 0.5)
                                    {
                                        <span>☆</span>  <!-- Sao rỗng -->
                                    }
                                    else
                                    {
                                        <span>☆</span> <!-- Sao rỗng -->
                                    }
                                }
                            </div>
                            </a>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @Html.Partial("~/Views/Shared/_Pagination.cshtml")
            </div>
        </section>
    </main>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Lấy tất cả các icon trái tim
            const heartIcons = document.querySelectorAll('.heart-icon_sp');

            heartIcons.forEach((heartIcon) => {
                heartIcon.addEventListener('click', () => {
                    // Tìm phần tử sản phẩm tương ứng
                    const productItem = heartIcon.closest('.product-item_sp');
                    const productId = productItem.dataset.productId; // Lấy ID sản phẩm từ thuộc tính data

                    // Thay đổi trạng thái "yêu thích"
                    const isFavorite = heartIcon.classList.toggle('favorited'); // Toggle class 'favorited'

                    // Gửi dữ liệu yêu thích về server bằng AJAX
                    fetch('/Favorite/ToggleFavorite', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-TOKEN': document.querySelector('input[name="__RequestVerificationToken"]').value // CSRF token
                        },
                        body: JSON.stringify({ productId, isFavorite })
                    })
                        .then(response => {
                            if (!response.ok) throw new Error('Failed to update favorite');
                            return response.json();
                        })
                        .then(data => {
                            if (data.success) {
                                console.log(`Sản phẩm ${productId} đã được cập nhật trạng thái yêu thích.`);
                            } else {
                                console.error('Lỗi khi cập nhật trạng thái yêu thích:', data.message);
                            }
                        })
                        .catch(error => {
                            console.error('Lỗi kết nối:', error);
                            // Phục hồi trạng thái nếu có lỗi
                            heartIcon.classList.toggle('favorited', !isFavorite);
                        });
                });
            });
        });
    </script>

</body>

</html>