<script>
     document.querySelector(".favorite_ct").addEventListener("click", function () {
        this.classList.toggle("active_ct");
    });
            document.querySelectorAll('.star_ct').forEach(star => {
            star.addEventListener('click', function () {
                const value = this.getAttribute('data-value');
                document.querySelectorAll('.star_ct').forEach(s => {
                    s.style.color = s.getAttribute('data-value') <= value ? '#FFD700' : '#ddd';
                });
            });
        });

        // Example: Add comment functionality (Replace with backend call)
        document.querySelector('.submit-comment_ct').addEventListener('click', () => {
            const commentText = document.querySelector('.comment-input_ct').value.trim();
            if (commentText) {
                const commentList = document.querySelector('.comments-list_ct');
                const newComment = document.createElement('div');
                newComment.className = 'comment-item_ct';
                newComment.innerHTML = `
                    <img src="~/img/user-placeholder.jpg" alt="User Avatar" class="comment-avatar_ct">
                    <div class="comment-content_ct">
                        <p class="comment-username_ct">Người dùng mới</p>
                        <p class="comment-text_ct">${commentText}</p>
                        <p class="comment-time_ct">${new Date().toLocaleString()}</p>
                    </div>
                `;
                commentList.prepend(newComment);
                document.querySelector('.comment-input_ct').value = '';
            }
        });
            document.querySelectorAll('.color-option_ct').forEach(option => {
        option.addEventListener('click', function () {
            // Bỏ trạng thái được chọn từ tất cả các màu
            document.querySelectorAll('.color-option_ct').forEach(o => o.classList.remove('selected_ct'));

            // Đánh dấu trạng thái được chọn cho màu hiện tại
            this.classList.add('selected_ct');
        });
    });

</script>




