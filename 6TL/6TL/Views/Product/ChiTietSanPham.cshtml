<script>
     $(document).ready(function () {
        let selectedColorId = null;
        let selectedColorCode = null;

        // Khi người dùng click vào màu
        $(".color-option_ct").click(function () {
            // Lấy mã màu từ `data-color-id` và `data-color-code`
            selectedColorId = $(this).attr("data-color-id");
            selectedColorCode = $(this).attr("data-color-code");
            console.log("Mã màu được chọn: " + selectedColorId);
            console.log("Mã màu HEX: " + selectedColorCode);

            // Đặt giá trị mã màu vào các input ẩn liên quan
            $("#productColor-buy").val(selectedColorCode); // Dùng ColorCode
            $("#productColor-cart").val(selectedColorCode); // Dùng ColorCode

            // Xóa class 'selected' của các màu khác và áp dụng class cho màu được chọn
            $(".color-option_ct").removeClass("selected");
            $(this).addClass("selected");
        });

        // Kiểm tra trước khi submit form "Mua ngay"
        $(".actions_ct form").on("submit", function (e) {
            if (!selectedColorCode) {
                alert("Vui lòng chọn màu trước khi tiếp tục.");
                e.preventDefault(); // Ngăn không cho gửi form
            } else {
                console.log("Gửi form với mã màu HEX: " + selectedColorCode);
            }
        });

        // Xử lý khi người dùng nhấn nút "Thêm Giỏ Hàng"
        $("#add-to-cart-form").submit(function (e) {
            e.preventDefault(); // Ngăn chặn gửi form mặc định

            const productId = $(this).find("input[name='productId']").val();
            const productName = $(this).find("input[name='productName']").val();
            const productImage = $(this).find("input[name='productImage']").val();
            const productPrice = $(this).find("input[name='price']").val();
            const quantity = $(this).find("input[name='quantity']").val();
            const color = selectedColorCode;

            if (!color) {
                alert("Vui lòng chọn màu sắc trước khi thêm sản phẩm vào giỏ hàng.");
                return;
            }

            // Debug: In ra các giá trị để kiểm tra
            console.log({
                productId: productId,
                productName: productName,
                productImage: productImage,
                productPrice: parseFloat(productPrice),
                colorCode: color, // Gửi mã màu ColorCode
                quantity: parseInt(quantity)
            });

            $.ajax({
                url: '/Product/AddToCart',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    productId: productId,
                    productName: productName,
                    productImage: productImage,
                    productPrice: parseFloat(productPrice),
                    colorCode: color, // Dùng ColorCode
                    quantity: parseInt(quantity)
                }),
                success: function (response) {
                    if (response.success) {
                        alert("Thêm vào giỏ hàng thành công!");
                    } else {
                        alert("Thêm vào giỏ hàng thất bại: " + response.message);
                    }
                },
                error: function (xhr, status, error) {
                    alert("Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng. Vui lòng thử lại.");
                    console.error("Error:", error);
                }
            });
        });
    });

</script>