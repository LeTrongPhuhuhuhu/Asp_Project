@model _6TL.Models.Blog

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Tin Tức</title>

    <link href="~/css/pages/chitiettintuc.css" rel="stylesheet" />
</head>
<body>

    <div class="container_cttt">
        <!-- Header with title and date -->
        <div class="news-header_cttt">
            <div class="news-date_cttt">
                <span class="day_cttt">@Model.CreatedAt?.Day</span>
                <span class="month-year_cttt">@Model.CreatedAt?.ToString("MM / yyyy")</span>
            </div>
            <div class="news-title_cttt">
                <h1>@Model.TieuDe</h1>
            </div>
        </div>

        <!-- News Content -->
        <div class="news-content_cttt">
            <p>@Model.NoiDung</p>
        </div>

        <!-- Like and Share -->
        <div class="news-social_cttt">
            <button class="like-btn_cttt">👍 Thích</button>
            <button class="share-btn_cttt">Chia sẻ</button>
        </div>
    </div>

</body>
</html>
