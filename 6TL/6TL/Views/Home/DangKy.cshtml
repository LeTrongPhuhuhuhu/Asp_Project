@model Customer
@{
    ViewData["Title"] = "Register";
}
<link href="~/css/pages/dangky.css" rel="stylesheet" />
<section class="banner-register">
    <img src="~/img/banner3.jpg" alt="Banner Đăng Ký" class="banner-image">
    <div class="banner-overlay">
        <h1 class="banner-title">ĐĂNG KÝ</h1>
    </div>
</section>

<section class="form-section">
    <form asp-action="DangKy" method="post" class="register-form">
        <!-- Hiển thị thông báo lỗi -->
        @if (!ViewData.ModelState.IsValid && ViewContext.HttpContext.Request.Method == "POST")



        {
            <div class="alert alert-danger">
                Vui lòng kiểm tra lại thông tin và điền đầy đủ các trường bắt buộc!
            </div>
        }
        <div class="form-row">
            <div class="form-group">
                <label for="name">Họ và Tên <span class="required">*</span></label>
                <input type="text" id="name" name="FullName" value="@Model.FullName" placeholder="Nhập họ và tên">
                @if (ViewContext.HttpContext.Request.Method == "POST")

                {
                    @Html.ValidationMessageFor(model => model.FullName, "", new { style = "color: red; font-size: 0.9em; margin-top: 5px;" })
                }
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="phone">Điện Thoại <span class="required">*</span></label>
                <input type="text" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Nhập số điện thoại">
                @if (ViewContext.HttpContext.Request.Method == "POST")

                {
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { style = "color: red; font-size: 0.9em; margin-top: 5px;" })
                }
            </div>
            <div class="form-group">
                <label for="email">Email <span class="required">*</span></label>
                <input type="email" id="email" name="Email" value="@Model.Email" placeholder="Nhập email">
                @if (ViewContext.HttpContext.Request.Method == "POST")

                {
                    @Html.ValidationMessageFor(model => model.Email, "", new { style = "color: red; font-size: 0.9em; margin-top: 5px;" })
                }
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="address">Địa Chỉ <span class="required">*</span></label>
                <input type="text" id="address" name="Address" value="@Model.Address" placeholder="Nhập địa chỉ">

                @if (ViewContext.HttpContext.Request.Method == "POST")

                {
                    @Html.ValidationMessageFor(model => model.Address, "", new { style = "color: red; font-size: 0.9em; margin-top: 5px;" })
                }

            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="password">Mật Khẩu <span class="required">*</span></label>
                <input type="password" id="password" name="Password" value="@Model.Password" placeholder="Nhập mật khẩu">
                @if (ViewContext.HttpContext.Request.Method == "POST")

                {
                    @Html.ValidationMessageFor(model => model.Password, "", new { style = "color: red; font-size: 0.9em; margin-top: 5px;" })
                }
                @* Thêm nút Hiện Mật Khẩu *@
                <div>
                    <input type="checkbox" id="showPassword" /> <label for="showPassword">Hiện Mật Khẩu</label>
                </div>
            </div>
        </div>
        <button class="submit-btn">Đăng Ký</button>
    </form>
</section>
<script>
    // Đảm bảo mã JavaScript chỉ chạy sau khi trang đã tải xong
    document.addEventListener("DOMContentLoaded", function () {
        var showPasswordCheckbox = document.getElementById("showPassword");
        var passwordField = document.getElementById("password");

        // Đảm bảo mật khẩu ban đầu được ẩn
        passwordField.type = "password";

        // Xử lý sự kiện khi checkbox thay đổi
        showPasswordCheckbox.addEventListener("change", function () {
            if (showPasswordCheckbox.checked) {
                passwordField.type = "text";  // Hiển thị mật khẩu
            } else {
                passwordField.type = "password";  // Ẩn mật khẩu
            }
        });
    });
</script>