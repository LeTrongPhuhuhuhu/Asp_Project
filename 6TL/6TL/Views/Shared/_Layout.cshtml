    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Lấy số lượng giỏ hàng từ API
            fetch('/Home/GetCartQuantity')
                .then(response => response.json())
                .then(data => {
                    const cartQuantity = document.getElementById('cart-quantity_la');
                    if (data.totalQuantity > 0) {
                        cartQuantity.textContent = data.totalQuantity; // Hiển thị số lượng sản phẩm
                        cartQuantity.style.display = 'inline'; // Hiển thị phần tử nếu có sản phẩm
                    } else {
                        cartQuantity.textContent = '0'; // Hiển thị "0" nếu không có sản phẩm
                        cartQuantity.style.display = 'inline'; // Vẫn hiển thị phần tử
                    }
                })
                .catch(error => console.error('Error fetching cart quantity:', error));

            // Xử lý sự kiện cho icon chat và khung chat
            const chatIcon = document.getElementById("chat-icon");
            const chatBox = document.getElementById("chat-box");
            const closeChat = document.getElementById("close-chat");

            // Hiển thị hoặc ẩn khung chat khi nhấn icon
            chatIcon.addEventListener("click", () => {
                chatBox.classList.toggle("hidden");
            });

            // Đóng khung chat
            closeChat.addEventListener("click", () => {
                chatBox.classList.add("hidden");
            });
        });

        // Xử lý sự kiện form đăng nhập
        document.getElementById('loginForm').addEventListener('submit', async function (e) {
            e.preventDefault(); // Ngăn chặn form gửi yêu cầu mặc định

            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value.trim();
            try {
                const response = await fetch('/Home/DangNhap', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password })
                });

                const result = await response.json();
                if (result.success) {
                    // Lưu thông tin người dùng vào Local Storage
                    localStorage.setItem('user', JSON.stringify({
                        token: result.token,
                        customer: result.customer
                    }));

                    alert('Đăng nhập thành công!');
                    window.location.href = '/Home/Index'; // Chuyển hướng sau khi đăng nhập
                } else {
                    alert(result.message);
                }
            } catch (error) {
                console.error('Đã xảy ra lỗi:', error);
                alert('Đăng nhập thất bại, vui lòng thử lại.');
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            const userData = localStorage.getItem('user');
            const authButton = document.getElementById('authButton');
            const accountDropdown = document.getElementById('accountDropdown');
            const adminOption = document.getElementById('adminOption');
            const logoutButton = document.getElementById('logoutButton');

            if (userData) {
                // Nếu có user trong localStorage
                const user = JSON.parse(userData); // Chuyển chuỗi thành đối tượng

                // Ẩn nút Đăng nhập và hiển thị tài khoản
                authButton.classList.add('hidden');
                accountDropdown.classList.remove('hidden');

                // Kiểm tra roleId để quyết định hiển thị Quản trị viên
                if (user.customer.roleId == 1) {
                    adminOption.style.display = 'block'; // Hiển thị tùy chọn Quản trị viên nếu roleId = 1
                }

                // Xử lý sự kiện đăng xuất
                logoutButton.addEventListener('click', async () => {
                    try {
                        const response = await fetch('/Home/DangXuat', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        const result = await response.json();
                        if (result.success) {
                            // Xóa thông tin người dùng khỏi localStorage
                            localStorage.removeItem('user');

                            // Ẩn dropdown tài khoản và quay lại trạng thái ban đầu
                            accountDropdown.style.display = 'none';
                            authButton.innerHTML = 'Đăng Nhập';
                            alert('Đăng xuất thành công!');

                            // Chuyển hướng đến trang chủ sau khi đăng xuất
                            window.location.href = '/Home/Index';
                        }
                    } catch (error) {
                        console.error('Đã xảy ra lỗi khi đăng xuất:', error);
                        alert('Đăng xuất thất bại, vui lòng thử lại.');
                    }
                });
            } else {
                // Hiển thị nút Đăng nhập và ẩn tài khoản
                authButton.classList.remove('hidden');
                accountDropdown.classList.add('hidden');
                authButton.onclick = () => {
                    // Mở modal đăng nhập nếu chưa đăng nhập
                    const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                    loginModal.show();
                };
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
