<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 6TL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="/css/style.css">
	<link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/pages/TrangChu.css">
    <link rel="stylesheet" href="~/css/pages/DangNhap.css">
    <link rel="stylesheet" href="/css/pages/DangKy.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <header class="navbar">
        <!-- Logo -->
        <div class="navbar-logo">
			<img src="~/img/black and white professional minimalistic real estate logo - copy.png" />
        </div>

        <!-- Menu -->
        <div class="navbar-menu">
            <ul>
                <li><a href="#">Giới thiệu</a></li>
                <li><a href="#">Nội thất</a></li>
                <li><a href="#">Trang trí</a></li>
                <li><a href="#">Cửa hàng</a></li>
            </ul>
            <!-- Thanh tìm kiếm -->
            <div class="search-bar">
                <input type="text" placeholder="Tìm kiếm...">
            </div>
            <i class="icon fa fa-shopping-cart"></i> <!-- Icon giỏ hàng -->
        </div>

        <!-- Nút Đăng ký và Đăng nhập -->
        <div class="auth-buttons">
            <a class="auth-button" asp-controller="Home" asp-action="DangNhap">Đăng nhập</a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>6TL</h5>
                    <p>Cửa hàng nội thất số 1 Việt Nam</p>
                    <p><strong>Hỗ trợ khách hàng:</strong> 1900 6750</p>
                    <p>Địa chỉ: 72 Huỳnh Thúc Kháng, Ward 15, District 1, Ho Chi Minh City</p>
                    <p>Email: 0306221380@caothang.edu.vn</p>
                    <div class="social-icons">
                        <i class="fab fa-facebook-square"></i>
                        <i class="fab fa-twitter"></i>
                        <i class="fab fa-youtube"></i>
                        <i class="fab fa-instagram"></i>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5>Hướng dẫn mua hàng</h5>
                    <ul>
                        <li><a href="#">Trang chủ</a></li>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Danh mục</a></li>
                        <li><a href="#">Tin tức</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Hỗ trợ khách hàng</h5>
                    <ul>
                        <li><a href="#">Trang chủ</a></li>
                        <li><a href="#">Giới thiệu</a></li>
                        <li><a href="#">Danh mục</a></li>
                        <li><a href="#">Tin tức</a></li>
                        <li><a href="#">Liên hệ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
