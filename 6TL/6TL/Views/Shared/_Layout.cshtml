        <!-- Logo -->
        <div class="navbar-logo">
            <a asp-controller="Home" asp-action="Index"><img src="~/img/black and white professional minimalistic real estate logo - copy.png" /></a>
        </div>

        <!-- Menu -->
        <div class="navbar-menu">
            <ul>
