                <li><a asp-controller="Home" asp-action="DanhMucSanPham">Sản Phẩm</a></li>
                <li><a asp-controller="Home" asp-action="TinTuc">Tin Tức</a></li>
                <li><a asp-controller="Home" asp-action="ChinhSach">Chính Sách</a></li>
                <li><a asp-controller="Home" asp-action="LienHe">Liên Hệ</a></li>
            </ul>
            <!-- Thanh tìm kiếm -->
            <div class="search-bar">
                <input type="text" placeholder="Tìm kiếm...">
            </div>
            <a href="/Home/GioHang" class="cart-containerd_la">
                <i class="fa-solid fa-cart-shopping"></i>
                <span id="cart-quantity_la" class="cart-quantity_la">0</span>
            </a>


        </div>

        <!-- Nút Đăng ký và Đăng nhập -->
        <button type="button" id="authButton" class="auth-button hidden" data-bs-toggle="modal" data-bs-target="#loginModal">
            Đăng Nhập
        </button>
        <!-- Dropdown menu cho tài khoản, Ẩn khi chưa đăng nhập và hiển thị khi đăng nhập -->
        <div id="accountDropdown" class="dropdown hidden">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-user"></i> <span id="usernameDisplay">Tài khoản</span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="/Profile/ViewProfile">Hồ sơ</a></li>
                <li><a class="dropdown-item" href="/Order/History">Lịch sử đơn hàng</a></li>
                <li><a class="dropdown-item" href="/Product/Favorites">Sản phẩm yêu thích</a></li>
                <li><a class="dropdown-item" href="#" id="logoutButton">Đăng xuất</a></li>
            </ul>
        </div>

    </header>
    <!-- Modal -->
    <div class="modal fade" id="loginModal" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <!-- Đảm bảo popup nằm giữa -->
            <div class="modal-content text-center">
                <!-- Nút đóng popup -->
                <button type="button" class="modal-close-btn" data-bs-dismiss="modal" aria-label="Close">&times;</button>
                <h2 class="modal-title" id="loginModalLabel">Đăng Nhập</h2>
                <div class="d-flex">
                    <form id="loginForm" class="custom-form">
                        <div class="social-login">
                            <button type="button" class="btn btn-lg google-login ">
                                <i class="fab fa-google"></i> Google
                            </button>
                            <button type="button" class="btn btn-lg facebook-login">
                                <i class="fab fa-facebook-f"></i> Facebook
                            </button>
                        </div>
                        <p>Hoặc đăng nhập với</p>
                        <div class="input-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="Email" placeholder="Email" required>
                        </div>
                        <div class="input-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="Password" placeholder="Password" required>
                        </div>
                        <div class="options">
                            <label>
                                <input type="checkbox"> Nhớ Mật Khẩu
                            </label>
                            <a asp-action="QuenMatKhau" asp-controller="Home">Quên mật khẩu?</a>
                        </div>
                        <button type="submit" class="login-btn">Đăng Nhập</button>
                        <a asp-controller="Home" asp-action="DangKy" class="text-decoration-none">Đăng Ký</a>
                    </form>
                    <div class="logo">
                        <img src="~/img/black and white professional minimalistic real estate logo (1).png" />
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Icon Chat -->
    <div id="chat-icon" class="chat-icon">
        <i class="fa fa-comments"></i>
    </div>

    <!-- Khung Chat -->
    <div id="chat-box" class="chat-box hidden">
        <div class="chat-header">
            <span>Hỗ trợ khách hàng</span>
            <i id="close-chat" class="fa fa-times close-icon"></i>
        </div>
        <div class="chat-content">
            <p>Xin chào! Tôi có thể giúp gì cho bạn?</p>
            <!-- Chat messages sẽ thêm ở đây -->
        </div>
        <div class="chat-input">
            <input type="text" placeholder="Nhập tin nhắn..." id="chat-message" />
            <button id="send-chat"><i class="fa fa-paper-plane"></i></button>
        </div>
    </div>
