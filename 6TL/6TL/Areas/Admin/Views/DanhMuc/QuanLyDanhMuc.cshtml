<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Danh mục</title>
    <link href="~/css/admin/quanlydanhmuc.css" rel="stylesheet" />
</head>
<body>
    <div class="container-dm">
        <header>
            <h1>Quản lý Danh mục Sản phẩm</h1>
        </header>

        <!-- Tìm kiếm danh mục -->
        <section class="search-category-dm">
            <h2>Tìm kiếm Danh mục</h2>
            <form action="@Url.Action("QuanLyDanhMuc", "DanhMuc")" method="GET">
                <input type="text" name="searchQuery" placeholder="Nhập tên danh mục cần tìm" value="@ViewBag.SearchQuery" required>
                <button type="submit">Tìm kiếm</button>
            </form>
        </section>

        <!-- Thêm danh mục -->
        <section class="add-category-dm">
            <h2>Thêm Danh mục Mới</h2>
            <form method="post" action="/Admin/DanhMuc/AddCategory">
                <div>
                    <label for="categoryName">Tên danh mục:</label>
                    <input type="text" id="categoryName" name="categoryName" required />
                </div>
                <div>
                    <label for="slug">Slug:</label>
                    <input type="text" id="slug" name="slug" readonly />
                </div>
                <div>
                    <label for="parentCategory">Danh mục cha:</label>
                    <select id="parentCategory" name="parentCategory">
                        <option value="">Không có</option>
                        <!-- Duyệt danh sách danh mục cha từ ViewBag -->
                        @foreach (var parent in ViewBag.ParentCategories)
                        {
                            <option value="@parent.CategoryId">@parent.CategoryName</option>
                        }
                    </select>
                </div>
                <button type="submit">Thêm danh mục</button>
            </form>

        </section>

        <!-- Danh sách danh mục -->
        <!-- Danh sách danh mục -->
        <section class="category-list-dm">
            <h2>Danh sách Danh mục</h2>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên Danh mục</th>
                        <th>Danh mục Cha</th>
                        <th>Slug</th> <!-- New column for Slug -->
                        <th>Trạng thái</th> <!-- New column for Status -->
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr id="category-row-@category.CategoryId" class="category-row">
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>@(category.ParentCategory != null ? category.ParentCategory.CategoryName : "--")</td>
                            <td>@category.Slug</td> <!-- Display the Slug -->
                            <td>@(category.Status ? "Hiện" : "Ẩn")</td> <!-- Display Status -->
                            <td>
                                <button class="edit-btn-dm" onclick="openEditPopup('@category.CategoryId', '@category.CategoryName', '@category.ParentCategoryId', '@category.Status')">Sửa</button>
                                <button class="delete-btn-dm" onclick="deleteCategory('@category.CategoryId')">Xóa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </div>

    <!-- Popup Sửa danh mục -->
    <div id="editPopup" class="popup-overlay">
        <div class="popup-content">
            <h4>Sửa Danh mục</h4>
            <form id="editCategoryForm">
                <input type="hidden" id="categoryId" />
                <input type="text" id="editCategoryName" placeholder="Tên danh mục" required>
                <select id="editParentCategory">
                    <option value="">-- Chọn danh mục cha (nếu có) --</option>
                    @foreach (var parentCategory in ViewBag.ParentCategories)
                    {
                        <option value="@parentCategory.CategoryId">@parentCategory.CategoryName</option>
                    }
                </select>
                <label for="editStatus">Trạng thái:</label>
                <select id="editStatus" name="status">
                    <option value="true">Hiện</option>
                    <option value="false">Ẩn</option>
                </select>
                <div class="popup-footer">
                    <button type="submit" class="btn-save">Cập nhật</button>
                    <button type="button" class="btn-cancel" onclick="closeEditPopup()">Hủy</button>
                </div>
            </form>
        </div>
    </div>
    </div>

    <script>
        function openEditPopup(categoryId, categoryName, parentCategoryId, status) {
            document.getElementById('categoryId').value = categoryId;
            document.getElementById('editCategoryName').value = categoryName;
            document.getElementById('editParentCategory').value = parentCategoryId;
            document.getElementById('editStatus').value = status ? "true" : "false"; // Set status in dropdown
            document.getElementById('editPopup').classList.add('show');
        }


        function toggleCategoryStatus(categoryId) {
            const categoryRow = document.querySelector(`#category-row-${categoryId}`);
            const statusText = document.getElementById(`status-${categoryId}`);

            // Kiểm tra trạng thái hiện tại của danh mục
            if (categoryRow.classList.contains('hidden-category')) {
                // Nếu danh mục đang ẩn, hiển thị lại và cập nhật trạng thái
                categoryRow.classList.remove('hidden-category');
                statusText.textContent = "Hiện"; // Cập nhật trạng thái "Hiện"
            } else {
                // Nếu danh mục đang hiển thị, ẩn đi và cập nhật trạng thái
                categoryRow.classList.add('hidden-category');
                statusText.textContent = "Ẩn"; // Cập nhật trạng thái "Ẩn"
            }
        }








        function closeEditPopup() {
            document.getElementById('editPopup').classList.remove('show');
        }
        document.getElementById('categoryName').addEventListener('input', function () {
            const categoryName = this.value;

            // Hàm tạo slug tự động
            const slug = categoryName
                .toLowerCase()
                .trim()
                .replace(/đ/g, 'd')              // Thay đ -> d
                .replace(/[áàạảãâấầậẩẫăắằặẳẵ]/g, 'a') // Thay các ký tự 'a'
                .replace(/[éèẹẻẽêếềệểễ]/g, 'e')  // Thay các ký tự 'e'
                .replace(/[óòọỏõôốồộổỗơớờợởỡ]/g, 'o') // Thay các ký tự 'o'
                .replace(/[íìịỉĩ]/g, 'i')        // Thay các ký tự 'i'
                .replace(/[úùụủũưứừựửữ]/g, 'u')  // Thay các ký tự 'u'
                .replace(/[ýỳỵỷỹ]/g, 'y')        // Thay các ký tự 'y'
                .replace(/[^a-z0-9\s-]/g, '')    // Xóa các ký tự đặc biệt
                .replace(/\s+/g, '-')            // Thay khoảng trắng -> dấu gạch ngang
                .replace(/-+/g, '-');            // Xóa dấu gạch ngang thừa

            // Gán slug vào ô input slug
            document.getElementById('slug').value = slug;
        });
        document.getElementById('editCategoryForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const categoryId = document.getElementById('categoryId').value;
            const categoryName = document.getElementById('editCategoryName').value;
            const parentCategoryId = document.getElementById('editParentCategory').value;

            fetch(`/Admin/DanhMuc/UpdateCategory/${categoryId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': '@Html.AntiForgeryToken()'
                },
                body: JSON.stringify({ categoryName, parentCategory: parentCategoryId })
            })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    closeEditPopup();
                    location.reload();
                })
                .catch(error => console.error('Lỗi:', error));
        });

        function deleteCategory(categoryId) {
            if (confirm("Bạn có chắc chắn muốn xóa danh mục này?")) {
                fetch(`/Admin/DanhMuc/DeleteCategory/${categoryId}`, {
                    method: 'POST',
                    headers: {
                        'X-CSRF-TOKEN': '@Html.AntiForgeryToken()'
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            alert("Xóa danh mục thành công!");
                            location.reload();
                        } else {
                            alert("Xóa danh mục thất bại!");
                        }
                    })
                    .catch(error => console.error('Lỗi khi xóa danh mục:', error));
            }
        }
    </script>
</body>
</html>
