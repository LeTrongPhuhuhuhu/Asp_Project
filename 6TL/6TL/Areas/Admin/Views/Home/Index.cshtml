@model _6TL.Models.WebsiteInfo

@{
    ViewData["Title"] = "Dashboard Admin";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Các phần khác của Dashboard -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thống kê sản phẩm </h5>
                    <li><strong> Tổng số lượng sản phẩm: </strong> @ViewBag.TotalProducts</li>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thống kê đơn hàng</h5>
                    <li><strong>Tổng số lượng đơn hàng: </strong> @ViewBag.TotalOrders</li>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thống kê doanh thu</h5>
                    <li><strong>Tổng doanh thu: </strong> @ViewBag.TotalRevenue.ToString("C")</li>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<!-- Phần chỉnh sửa thông tin website -->
<div class="container mt-5">
    <h3>Thông tin website</h3>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#editWebsiteForm" aria-expanded="false" aria-controls="editWebsiteForm">
        Chỉnh sửa thông tin website
    </button>

    <div class="collapse mt-3" id="editWebsiteForm">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Chỉnh sửa thông tin</h5>
                <form method="post" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <div class="form-group">
                        <label for="Description">Mô tả</label>
                        <input type="text" class="form-control @(ViewData.ModelState["Description"]?.Errors.Any() == true ? "is-invalid" : "")" id="Description" name="Description" value="@Model.Description">
                        @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="PhoneNumber">Số điện thoại</label>
                        <input type="text" class="form-control @(ViewData.ModelState["PhoneNumber"]?.Errors.Any() == true ? "is-invalid" : "")" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
                        @Html.ValidationMessage("PhoneNumber", "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label for="Address" class="form-label">Địa chỉ:</label>
                        <input id="Address" name="Address" class="form-control" value="@Model?.Address" />
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Any() == true ? "is-invalid" : "")" id="Email" name="Email" value="@Model.Email">
                        @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                    </div>


                    <div class="mb-3">
                        <label for="FacebookUrl" class="form-label">Facebook:</label>
                        <input id="FacebookUrl" name="FacebookUrl" class="form-control" value="@Model?.FacebookUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="YouTubeUrl" class="form-label">YouTube:</label>
                        <input id="YouTubeUrl" name="YouTubeUrl" class="form-control" value="@Model?.YouTubeUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="TwitterUrl" class="form-label">Twitter:</label>
                        <input id="TwitterUrl" name="TwitterUrl" class="form-control" value="@Model?.TwitterUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="InstagramUrl" class="form-label">Instagram:</label>
                        <input id="InstagramUrl" name="InstagramUrl" class="form-control" value="@Model?.InstagramUrl" />
                    </div>


                    <div class="form-group">
                        <label for="LogoUrl">Logo</label>
                        <input type="file" class="form-control @(ViewData.ModelState["LogoUrl"]?.Errors.Any() == true ? "is-invalid" : "")" id="LogoUrl" name="LogoUrl">
                        @Html.ValidationMessage("LogoUrl", "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                </form>
            </div>
        </div>
    </div>
</div>
