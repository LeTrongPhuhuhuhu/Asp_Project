@model _6TL.Models.WebsiteInfo

@{
    ViewData["Title"] = "Dashboard Admin";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Các phần khác của Dashboard -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý danh mục</h5>
                    <p class="card-text">Thông tin về danh mục sản phẩm.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý đơn hàng</h5>
                    <p class="card-text">Thông tin đơn hàng.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<!-- Phần chỉnh sửa thông tin website -->
<div class="container mt-5">
    <h3>Thông tin website</h3>
    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#editWebsiteForm" aria-expanded="false" aria-controls="editWebsiteForm">
        Chỉnh sửa thông tin website
    </button>

    <div class="collapse mt-3" id="editWebsiteForm">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Chỉnh sửa thông tin</h5>
                <form method="post" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <div class="mb-3">
                        <label for="Description" class="form-label">Mô tả:</label>
                        <textarea id="Description" name="Description" class="form-control" rows="3">@Model?.Description</textarea>
                    </div>

                    <div class="mb-3">
                        <label for="PhoneNumber" class="form-label">Số điện thoại:</label>
                        <input id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model?.PhoneNumber" />
                    </div>

                    <div class="mb-3">
                        <label for="Address" class="form-label">Địa chỉ:</label>
                        <input id="Address" name="Address" class="form-control" value="@Model?.Address" />
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email:</label>
                        <input id="Email" name="Email" class="form-control" value="@Model?.Email" />
                    </div>

                    <div class="mb-3">
                        <label for="FacebookUrl" class="form-label">Facebook:</label>
                        <input id="FacebookUrl" name="FacebookUrl" class="form-control" value="@Model?.FacebookUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="YouTubeUrl" class="form-label">YouTube:</label>
                        <input id="YouTubeUrl" name="YouTubeUrl" class="form-control" value="@Model?.YouTubeUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="TwitterUrl" class="form-label">Twitter:</label>
                        <input id="TwitterUrl" name="TwitterUrl" class="form-control" value="@Model?.TwitterUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="InstagramUrl" class="form-label">Instagram:</label>
                        <input id="InstagramUrl" name="InstagramUrl" class="form-control" value="@Model?.InstagramUrl" />
                    </div>

                    <div class="mb-3">
                        <label for="LogoUrl" class="form-label">Logo URL:</label>
                        <input id="LogoUrl" name="LogoUrl" class="form-control" value="@Model?.LogoUrl" />
                    </div>

                    <button type="submit" class="btn btn-success">Lưu thay đổi</button>
                </form>
            </div>
        </div>
    </div>
</div>
