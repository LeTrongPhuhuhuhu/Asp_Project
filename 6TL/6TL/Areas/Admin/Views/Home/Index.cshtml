        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
                // Open and Close Modal Functionality
                function showReviews(productId) {
                    const modal = document.getElementById('reviews-modal_db');
                    const productName = document.getElementById('product-name-modal_db');
                    const reviewsContainer = document.getElementById('reviews-container_db');

                    // Set the product name dynamically (based on the productId or data)
                    productName.innerText = "Đánh giá của " + productId;

                    // Example: Load reviews dynamically (this could be an API call or static data)
                    reviewsContainer.innerHTML = `
                        <p>Review 1: Excellent product!</p>
                        <p>Review 2: Good quality.</p>
                        <p>Review 3: Could be better.</p>
                    `;

                    modal.style.display = 'flex'; // Show modal
                }

                function closeModal() {
                    const modal = document.getElementById('reviews-modal_db');
                    modal.style.display = 'none'; // Close modal
                }

                // Chart.js Data Setup
                const ctx1 = document.getElementById('revenue-chart_db').getContext('2d');
                const revenueChart = new Chart(ctx1, {
                    type: 'bar',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                        datasets: [{
                            label: 'Doanh Thu',
                            data: [1200, 1900, 3000, 5000, 2000, 2500, 3500],
                            backgroundColor: '#6c63ff',
                            borderColor: '#4a4a9a',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                title: { text: 'Month', display: true }
                            },
                            y: {
                                title: { text: 'Revenue ($)', display: true }
                            }
                        }
                    }
                });

                const ctx2 = document.getElementById('line-chart_db').getContext('2d');
                const lineChart = new Chart(ctx2, {
                    type: 'line',
                    data: {
                        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],

       
                datasets: [{
                    label: 'Lợi Nhuận',
                    data: [400, 600, 800, 1200, 700, 800, 900],
                    borderColor: '#ff5733',
                    borderWidth: 2,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        title: { text: 'Month', display: true }
                    },
                    y: {
                        title: { text: 'Profit ($)', display: true }
                    }
                }
            }
        });

        const ctx3 = document.getElementById('pie-chart_db').getContext('2d');
        const pieChart = new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Product 1', 'Product 2', 'Product 3'],
                datasets: [{
                    label: 'Product Distribution',
                    data: [45, 30, 25],
                    backgroundColor: ['#ff6347', '#4caf50', '#3f51b5']
                }]
