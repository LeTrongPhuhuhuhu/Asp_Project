@{
    Layout = "_Layout"; // Thêm Layout vào trang
}

<link href="~/css/admin/dashboard.css" rel="stylesheet" />
<div class="dashboard-container">
    <!-- Hộp đầu tiên: Tổng doanh thu -->
    <div class="box total-revenue">
        <h4>Total Revenue ($)</h4>
        <h2>$24,165</h2>
        <p>24 Hours</p>
    </div>

    <!-- Hộp: Biểu đồ tròn -->
    <div class="box category-breakup">
        <h4>Category Wise Breakup</h4>
        <div class="chart donut-chart"></div>
    </div>

    <!-- Hộp: Biểu đồ cột -->
    <div class="box sku-sales">
        <h4>SKU Sales by Month</h4>
        <div class="chart bar-chart"></div>
    </div>

    <!-- Hộp: Social Media -->
    <div class="box social-media">
        <h4>Social Media</h4>
        <p>Facebook: 5.68K | Twitter: 3.84K</p>
    </div>

    <!-- Hộp: Top Orders by Country -->
    <div class="box top-orders">
        <h4>Top Orders by Country</h4>
        <ul>
            <li>USA: 14,785</li>
            <li>UK: 10,486</li>
            <!-- Thêm các quốc gia khác -->
        </ul>
    </div>

    <!-- Hộp: Tổng số người dùng -->
    <div class="box total-users">
        <h4>Total Users</h4>
        <h2>432,168</h2>
        <p>24 Hours</p>
    </div>

    <!-- Hộp: Tin tức -->
    <div class="box news">
        <h4>Latest E-commerce News</h4>
        <p>New Payment Gateway Integration</p>
    </div>

    <!-- Hộp: Biểu đồ đường -->
    <div class="box line-chart">
        <h4>Revenue Growth</h4>
        <div class="chart line-chart-graph"></div>
    </div>

    <!-- Hộp: Orders by Status -->
    <div class="box orders-status">
        <h4>Orders by Status</h4>
        <ul>
            <li>Awaiting</li>
            <li>Confirmed</li>
            <!-- Thêm trạng thái -->
        </ul>
    </div>
</div>

