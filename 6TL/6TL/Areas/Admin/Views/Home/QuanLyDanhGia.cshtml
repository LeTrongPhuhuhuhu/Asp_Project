<style>
    .review-management {
        display: flex;
        gap: 20px;
        padding: 20px;
    }

    .product-list, .review-section {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-item {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
    }

        .product-item img {
            border-radius: 8px;
            border: 1px solid #ddd;
        }

    .rating {
        color: #ffc107;
        font-size: 14px;
    }

    .rating-filter {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
    }

        .rating-filter button {
