<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm sản phẩm</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        form {
            max-width: 600px;
            margin: auto;
        }
        label {
            font-weight: bold;
        }
        input, select, textarea, button {
            width: 100%;
            padding: 8px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            cursor: pointer;
            background-color: #007BFF;
            color: white;
            border: none;
        }
        .color-row {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .color-row input, .color-row select {
            width: calc(50% - 10px);
        }
        .remove-color {
            background-color: red;
            color: white;
            width: auto;
        }
        #colors-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h2>Thêm sản phẩm</h2>
    <form>
        <label for="name">Tên sản phẩm:</label>
        <input type="text" id="name" name="name" placeholder="Nhập tên sản phẩm" />

        <label for="description">Mô tả:</label>
        <textarea id="description" name="description" rows="4" placeholder="Mô tả sản phẩm"></textarea>

        <label for="price">Giá:</label>
        <input type="number" id="price" name="price" placeholder="Nhập giá sản phẩm" />

        <label for="category">Danh mục:</label>
        <input type="text" id="category" name="category" placeholder="Danh mục sản phẩm" />

        <h3>Thêm màu sắc và số lượng:</h3>
        <div id="colors-container">
            <div class="color-row">
                <select name="colors[0][color]" required>
                    <option value="">Chọn màu sắc</option>
                    <option value="red">Đỏ</option>
                    <option value="blue">Xanh dương</option>
                    <option value="green">Xanh lá</option>
                </select>
                <input type="number" name="colors[0][quantity]" min="1" placeholder="Số lượng" required />
                <button type="button" class="remove-color">Xóa</button>
            </div>
        </div>
        <button type="button" id="add-color">Thêm màu</button>

        <button type="submit">Lưu sản phẩm</button>
    </form>

    <script>
        document.getElementById('add-color').addEventListener('click', function () {
            const container = document.getElementById('colors-container');
            const rowCount = container.children.length;

            const newRow = document.createElement('div');
            newRow.classList.add('color-row');
            newRow.innerHTML = `
                <select name="colors[${rowCount}][color]" required>
                    <option value="">Chọn màu sắc</option>
                    <option value="red">Đỏ</option>
                    <option value="blue">Xanh dương</option>
                    <option value="green">Xanh lá</option>
                </select>
                <input type="number" name="colors[${rowCount}][quantity]" min="1" placeholder="Số lượng" required />
                <button type="button" class="remove-color">Xóa</button>
            `;
            container.appendChild(newRow);
        });

        document.getElementById('colors-container').addEventListener('click', function (e) {
            if (e.target.classList.contains('remove-color')) {
                e.target.parentElement.remove();
            }
        });
    </script>
</body>
</html>
